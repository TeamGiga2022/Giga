<html lang="en">

<head>
  <!--title is text-only and shown in browser title bar -->
  <title>Mail | <%=titles%></title>
  <!-- Meta Tags: To ensure proper rendering and touch zooming, add the following meta tag inside the <head> element: -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS ="bootstrap-5.1.3-dist/css/bootstrap.min.css" -->
  <link rel="stylesheet" href="/bootstrap-5.1.3-dist/css/bootstrap.css">
  <link href="public/style.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" type="text/css" href="style.css">

  <script src="bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>



</head>

  <body>

    <!-- container for the main body --> <!-- -->
    <div class="container">

    <div class="row" style="max-width: 200px">
      <!-- Buffer Zone -->
        <img src="Pics\woman.jpg" class="float-left" >
        <h3> Username </h3>
    </div>

    <!-- Button Row Main NavBar -->
    <div class="row">
      <div class="col-4 text-center border bg-light">
          <a href="#" class="btn btn-block btn-dark">My Plan</a>
      </div>
      <div class="col-4 text-center border bg-light">
        <a href="#" class="btn btn-block btn-dark">Action Plan</a>
      </div>
      <div class="col-4 text-center border bg-light">
        <a href="index.ejs" class="btn btn-block btn-dark">Mail/Notes</a>
      </div>
    </div>

<!-- Button Row Mail&Notes -->
      <div class="row">
        <div class="btn-group btn-group-lg" role="group"   aria-label="Button group for inbox, outbox, send message and view notes">
          <div class="col-3 text-center border bg-light justify-content-between" aria-labelledby="inbox">
            <a href="index.ejs" class="btn btn-block btn-primary">Inbox</a>
          </div>
          <div class="col-3 border text-center bg-light span2" aria-labelledby="outbox">
            <a href="outbox.ejs" class="btn btn-block btn-primary">Outbox</a>
          </div>
          <div class="col-3 border bg-light text-center" aria-labelledby="send message">
            <a href="sendmessage.ejs" class="btn btn-block btn-primary">Send Message</a>
          </div>
          <div class="col-3 text-center border bg-light" aria-labelledby="view notes">
            <a href="notes.ejs" class="btn btn-block btn-primary">View Notes</a>
          </div>
        </div>
      </div>



<!-- start of Template -->
<!-- Will grab email info from database and display them in these containers-->
        <div class="row">
            <div class="col text-center border bg-light">
                <div class="row" border>
                    <h4> From: <%=blogs[2].sender%> </h4>
                </div>
                <div class="row border">
                <h4> No associated date in database </h4>
                </div>
                <div class="row border">
                    <h4> <%=blogs[2].subject%>  </h4>
                </div>
                <div class="row border">
                    <p> <%=blogs[2].message%> </p>
                </div>
            </div>
        </div>
        <!-- Button row-->

        <div class="row button-row text-center">
            <div class="col text-center">
                <a href="sendmessage.ejs" class="btn btn-warning btn-lg ">Forward</a>
            </div>
            <div class="col-sm ">
                <a href="sendmessage.ejs" class="btn btn-info btn-lg">Reply</a>
            </div>
            <div class="col text-center">
                <a href="sendmessage.ejs" class="btn btn-danger btn-lg">Delete</a>
            </div>

        </div>
        <!-- End Button row-->



  </body>

  <footer>
  </footer>

</html>
